<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <routes>
        <route>
            <name>news_detail</name>
            <pattern>/(.*?)\-([0-9]+)+$/</pattern>
            <reverse>%document/%name-%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>path,news</variables>
            <priority>5</priority>
        </route>
    </routes>
</zend-config>