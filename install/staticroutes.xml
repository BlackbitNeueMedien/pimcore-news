<?xml version="1.0"?>
<zend-config>
    <routes>
        <route>
            <name>news_detail</name>
            <pattern>/(\w+)\/news\/(.*?)\-([0-9]+)+$/</pattern>
            <reverse>/%lang/news/%name-%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>lang,path,news</variables>
            <priority>5</priority>
        </route>
    </routes>
</zend-config>