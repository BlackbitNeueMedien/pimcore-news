<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <routes>
        <route>
            <name>news_list</name>
            <pattern>/(.*?)\/news\/kategorie\/(.*?)\-([0-9]+)/</pattern>
            <reverse>/%lang/news/%name-%category</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>list</action>
            <variables>lang,name,category</variables>
            <priority>2</priority>
        </route>
        <route>
            <name>news_detail</name>
            <pattern>/(.*?)\/news\/(.*?)\-([0-9]+)/</pattern>
            <reverse>/%lang/news/%name-%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>lang,name,news</variables>
            <priority>3</priority>
        </route>
    </routes>
</zend-config>