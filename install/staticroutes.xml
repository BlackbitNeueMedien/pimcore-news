<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <routes>
        <route>
            <name>news_detail</name>
            <pattern>/\/(.*?)\/(.*?)\/detail\/(.*?)\-([0-9]+)/</pattern>
            <reverse>/%lang/%path/detail/%name-%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>lang,path,name,news</variables>
            <priority>5</priority>
        </route>
    </routes>
</zend-config>