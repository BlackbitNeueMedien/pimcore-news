<?xml version="1.0"?>
<zend-config>
    <routes>
        <route>
            <name>news_detail</name>
            <pattern>/(\w+)\/news\/(.*?)$/</pattern>
            <reverse>/%lang/news/%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>lang,news</variables>
            <priority>0</priority>
        </route>
    </routes>
    <routes>
        <route>
            <name>press_detail</name>
            <pattern>/(\w+)\/press\/(.*?)$/</pattern>
            <reverse>/%lang/press/%news</reverse>
            <module>News</module>
            <controller>news</controller>
            <action>detail</action>
            <variables>lang,news</variables>
            <priority>0</priority>
        </route>
    </routes>
</zend-config>