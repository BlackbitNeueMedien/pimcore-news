<div class="toolbox-edit-overlay news-config-window">

    {# first element is always "none" #}
    {% if config.presets.store|length > 1 %}

        <div class="t-row">

            <label for="clearfix">{{ 'news.preset'|trans({}, 'admin') }}</label><br>
            {{ pimcore_select('presets', { width: 250, store: config.presets.store }) }}

        </div>

        <div class="t-row news-preset-preview-fields">

            {% for preview in config.presets.info %}
                <div class="news-preset-preview-field" data-name="{{ preview.name }}">
                    <div class="description">
                    {% if preview.description is not empty %}
                        {{ preview.description }}
                    {% else %}
                        {{ 'news.preset_info_no_description'|trans({}, 'admin') }}
                    {% endif %}
                    </div>
                </div>
            {% endfor %}

        </div>

    {% endif %}

    <div class="news-configuration-fields">

        <div class="t-row">

            <div class="t-col-half">
                <label class="clearfix">{{ 'news.top_entries'|trans({}, 'admin') }}</label><br>
                {{ pimcore_checkbox('latest') }} {{ 'news.show_only_top_entries'|trans({}, 'admin') }}
            </div>

            <div class="t-col-half">
                <label>{{ 'news.layout'|trans({}, 'admin') }}</label>
                {{ pimcore_select('layout', {'store': config.layouts.store}) }}
            </div>

        </div>

        <div class="t-row">

            <div class="t-col-half">
                <label class="clearfix">{{ 'news.pagination'|trans({}, 'admin') }}</label><br>
                {{ pimcore_checkbox('showPagination') }} {{ 'news.show_pagination'|trans({}, 'admin') }}
            </div>
            <div class="t-col-half">
                <label>{{ 'news.entries_per_page'|trans({}, 'admin') }}</label>
                {{ pimcore_numeric('itemsPerPage', { 'decimalPrecision': 0, 'minValue': 0 }) }}
            </div>

        </div>

        <div class="t-row">

            <div class="t-col-half">
                <label>{{ 'news.maximum_number_of_entries'|trans({}, 'admin') }}</label>
                {{ pimcore_numeric('limit', {'decimalPrecision': 0, 'minValue': 0 }) }}
            </div>

            <div class="t-col-half">
                <label>{{ 'news.offset'|trans({}, 'admin') }}</label>
                {{ pimcore_numeric('offset', {'decimalPrecision': 0, 'minValue': 0 }) }}
            </div>

        </div>

        <div class="t-row">

            <div class="t-col-half">
                <label>{{ 'news.sort_by'|trans({}, 'admin') }}</label>
                {{ pimcore_select('sortby', { 'store': config.sort_by.store
                }) }}
            </div>

            <div class="t-col-half">
                <label>{{ 'news.order_by'|trans({}, 'admin') }}</label>
                {{ pimcore_select('orderby', { 'store': config.order_by.store
                }) }}
            </div>

        </div>

        <div class="t-row">

            <label>{{ 'news.time_range'|trans({}, 'admin') }}</label>
            {{ pimcore_select('timeRange', { 'store': config.time_range.store}) }}

        </div>


        <div class="t-row">

            <div class="t-col-half">
                <label>{{ 'news.category'|trans({}, 'admin') }}</label>
                {{ pimcore_href('category', config.category.href_config) }}
            </div>

            <div class="t-col-half">
                <label class="clearfix">{{ 'news.subcategories'|trans({}, 'admin') }}</label><br>
                {{ pimcore_checkbox('includeSubCategories') }} {{ 'news.include_subcategories'|trans({}, 'admin') }}
            </div>

        </div>

        <div class="t-row">

            <label>{{ 'news.single_objects'|trans({}, 'admin') }}</label>
            {{ pimcore_multihref('singleObjects', config.single_objects.multi_href_config) }}

        </div>

        <div class="t-row">

            <div class="t-col-half">

                <label>{{ 'news.entry_type'|trans({}, 'admin') }}</label>
                {{ pimcore_select('entryType', {'store': config.entry_types.store}) }}
            </div>

            <div class="t-col-half">
            <span class="description">
                <strong>{{ 'news.entry_type'|trans({}, 'admin') }}
                    :</strong> {{ 'news.entry_type_output_limit'|trans({}, 'admin') }}
            </span>

            </div>

        </div>

        {% include '@News/Areas/news/edit_custom.html.twig' %}

    </div>

</div>